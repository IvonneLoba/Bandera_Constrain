<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Verde"
        android:layout_width="135dp"
        android:layout_height="0dp"
        android:background="#06E30F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Blanco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Blanco"
        android:layout_width="135dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/Verde"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Rojo"
        app:layout_constraintBottom_toBottomOf="parent">
    </TextView>

    <TextView
        android:id="@+id/Rojo"
        android:layout_width="135dp"
        android:layout_height="0dp"
        android:background="#EC1111"
        app:layout_constraintStart_toEndOf="@+id/Blanco"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Blanco"
        ></TextView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="132dp"
        android:layout_height="179dp"
        app:layout_constraintBottom_toBottomOf="@+id/Blanco"
        app:layout_constraintEnd_toEndOf="@+id/Rojo"
        app:layout_constraintStart_toStartOf="@+id/Verde"
        app:layout_constraintTop_toTopOf="@+id/Blanco"
        app:srcCompat="@drawable/descarga" />


</androidx.constraintlayout.widget.ConstraintLayout>